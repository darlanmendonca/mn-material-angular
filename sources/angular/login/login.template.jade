.layout-fullscreen.layout-centered.login
  h2.logotype mn-material

  form.card.layout-column(name='form' ng-submit='form.$valid && login.authenticate()', novalidate, spellcheck='false')
    //- mn-form.layout-column(name='form' ng-submit='login.authenticate()')
    mn-input(placeholder='Email', name='email', ng-model='login.credentials.email', required, type='email'): i.zmdi.zmdi-email
    mn-input(placeholder='Password', name='password', ng-model='login.credentials.password', required, type='password'): i.zmdi.zmdi-lock
    
    button.mn-button.action.raised(type='submit', name='submit'): i.zmdi.zmdi-long-arrow-right
    //- mn-button.raised login
